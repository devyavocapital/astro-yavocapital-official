---
import ItemMenu from './ItemMenu.astro'
const links = [
  { name: '¿Quienes somos?', url: '/quienes-somos' },
  { name: 'Productos Financieros', url: '/productos-financieros' },
  { name: 'MejoraSí', url: '/mejorasi' },
  { name: 'Blog Financiero', url: '/blog-financiero' },
  { name: 'Contáctanos', url: '/contacto' },
]
---

<nav
  class="bg-white fixed w-full z-20 top-0 start-0 border-b-2 border-[rgb(237_107_55)]"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/" class="flex items-center space-x-3">
      <img
        src="/images/logos/logo.webp"
        class="w-[200px] h-auto"
        alt="YavoCapital Logo"
      />
    </a>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-sticky"
    >
      <ul
        class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0"
      >
        {links.map(({ name, url }) => <ItemMenu url={url} name={name} />)}
      </ul>
    </div>
  </div>
</nav>
